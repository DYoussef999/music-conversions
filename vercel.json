{
  "buildCommand": "echo 'Building...' && exit 0",
  "outputDirectory": ".",
  "public": true,
  "cleanUrls": false,
  "headers": [
    {
      "source": "/hazzat-visualizer.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, max-age=0"
        }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/fonts/:path*",
      "destination": "/fonts/:path*"
    }
  ]
}
